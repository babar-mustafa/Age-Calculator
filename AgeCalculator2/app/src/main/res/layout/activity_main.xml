<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/activity_main"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        tools:context="com.example.babar.agecalculator.MainActivity">

        <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:layout_marginTop="10dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardCornerRadius="10dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/textView1"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="18dp"
                    android:textSize="18dp"
                    android:textColor="#689F38"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/title"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"
                    android:text="Current Date"
                    android:textSize="18dp"
                    android:textColor="#689F38"
                    android:textStyle="bold"
                    />

                <TextView
                    android:id="@+id/age_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView2"
                    android:layout_marginLeft="10dp"
                    android:layout_marginTop="13dp"
                    android:textSize="18dp"
                    android:textColor="#689F38"
                    android:textStyle="bold"/>


                <ImageView
                    android:id="@+id/thumbnail"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:scaleType="centerInside"
                    android:src="@drawable/show" />

                <TextView
                    android:id="@+id/days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/age_show"
                    android:layout_marginRight="20dp"
                    android:text="Day's"
                    android:textSize="18dp"
                    android:textColor="#689F38"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/for_days"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/days"
                    android:layout_marginRight="20dp"
                    android:textSize="40dp"
                    android:textColor="#689F38"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/years"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/age_show"
                    android:layout_marginLeft="20dp"
                    android:text="Year's"
                    android:textSize="18dp"
                    android:textColor="#689F38"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/to_show_days"
                    android:layout_below="@id/years"
                    android:layout_marginTop="60dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:textColor="#689F38"
                    android:textStyle="bold"
                    />
<TextView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/name_of_day"
    android:layout_below="@+id/to_show_days"
    android:layout_marginTop="20dp"
android:textColor="#689F38"
    android:textSize="18dp"
    android:textStyle="bold"
    android:layout_alignParentLeft="true"
    android:layout_marginLeft="20dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/name_of_day"
                    android:layout_marginTop="20dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"
                    android:textColor="#689F38"
                    android:textStyle="bold"
                    android:id="@+id/daysleft"/>
                <TextView
                    android:id="@+id/for_years"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/years"
                    android:layout_marginLeft="20dp"
                    android:textSize="40dp"
                    android:textColor="#689F38"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/months"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/age_show"
                    android:layout_centerInParent="true"
                    android:text="Month's"
                    android:textSize="18dp"
                    android:textColor="#689F38"
                    android:layout_marginTop="5dp"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/for_months"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/months"
                    android:layout_centerInParent="true"

                    android:textSize="40dp"
                    android:textColor="#689F38"
                    android:textStyle="bold"/>

                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:text="Default format is DD:MM:YY"
                    android:textColor="#689F38"
                    android:textSize="18dp"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_centerInParent="true"
                    android:layout_below="@+id/thumbnail"

                     />
                <android.support.design.widget.FloatingActionButton
                    android:id="@+id/button1"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_margin="40dp"
                    android:background="@android:drawable/ic_menu_my_calendar"
                    android:src="@drawable/ag" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>





    </LinearLayout>
</ScrollView>